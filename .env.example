# Application
PORT=3000
WS_PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# MongoDB (use local or external)
MONGODB_URI=mongodb://chat-mongo:27017/chat-service
# Example external: mongodb+srv://user:pass@cluster.mongodb.net/chat-service

# Redis (use local or external)
REDIS_URL=redis://chat-redis:6379
# Example external: redis://my-redis.cache.amazonaws.com:6379

# Authentication (shared JWT secret with master service)
AUTH_JWT_SECRET=your-secret-key-here-at-least-32-characters-long
AUTH_JWT_ISSUER=master-service

# Internal Communication
INTERNAL_API_SECRET=secret-for-master-to-chat-calls-min-32-chars
WEBHOOK_URL=http://master-service:3000/webhooks/chat
WEBHOOK_SECRET=secret-for-signing-webhooks-min-32-chars
WEBHOOK_ENABLED=false
WEBHOOK_EVENTS=message.created,message.updated,message.deleted,conversation.created,conversation.deleted,participant.added,participant.removed,reaction.added,reaction.removed,user.online,user.offline
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_TIMEOUT_MS=5000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
# Production: https://example.com,https://app.example.com
